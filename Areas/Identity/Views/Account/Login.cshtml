@{
    ViewData["Title"] = "Login";
}

<div class="auth-container">
    <h2 class="mb-4">Login</h2>

    <form asp-action="Login" method="post" novalidate>
        <div asp-validation-summary="All" class="alert alert-danger"></div>

        <div class="form-row">
            <p class="field-name">Email:</p>
            <input name="email" class="form-control" type="email" value="@ViewData["Email"]" />
            @if (ViewData.ModelState.ContainsKey("email"))
            {
                <span class="text-danger">@ViewData.ModelState["email"].Errors.FirstOrDefault()?.ErrorMessage</span>
            }
        </div>

        <div class="form-row mb-4">
            <p class="field-name">Password:</p>
            <input name="password" class="form-control" type="password" />
            @if (ViewData.ModelState.ContainsKey("password"))
            {
                <span class="text-danger">@ViewData.ModelState["password"].Errors.FirstOrDefault()?.ErrorMessage</span>
            }
        </div>

        <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>

    <div class="mt-3 text-center">
        <p>Don't have an account? <a asp-action="Register">Register here</a></p>
    </div>
</div>


<style>
    .auth-container {
        max-width: 440px;
        margin: 70px auto;
        padding: 30px 25px;
        background: #fff;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    .form-row {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

    .field-name {
        flex: 0 0 130px;
        font-weight: 600;
        margin: 0;
        padding-right: 15px;
        font-size: 1rem;
        color: #333;
    }

    .form-control {
        flex: 1;
        padding: 8px 10px;
        font-size: 1rem;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .text-danger {
        margin-left: 145px;
        font-size: 0.875rem;
        color: #d9534f;
        margin-top: 2px;
        display: block;
    }

    .btn-primary {
        background-color: #4a90e2;
        border: none;
        font-weight: 600;
        font-size: 1.1em;
        padding: 10px;
        border-radius: 6px;
    }

    .btn-primary:hover {
        background-color: #357abd;
    }
</style>
