@*
    Minimal splash page showing Register > Payment > login for guests
    and "go to dashboard" for logged in users.
*@

@model SeniorLearnWebApp.Models.HomeIndexViewModel

<div class="container text-center mt-5">
    <h1>Welcome to SeniorLearn</h1>
    <h2>Connect and learn together</h2>

    @if (!Model.IsLoggedIn)
    {
        <h4 class="mt-4">Register to start learning with us</h4>
        <a class="btn btn-primary mx-2" href="@Url.Action("Register", "Account")">Register</a>
        <a class="btn btn-outline-secondary mx-2" href="@Url.Action("Login", "Account")">Login</a>
    }
    else
    {
        <p class="mt-4">Welcome back! Ready to continue your learning journey?</p>
        @if (Model.Role == "Admin")
        {
            <a class="btn btn-success" href="@Url.Action("Dashboard", "Admin")">Go to Admin Dashboard</a>
        }
        else
        {
            <a class="btn btn-success" href="@Url.Action("Dashboard", "User")">Go to Dashboard</a>
        }
    }
</div>